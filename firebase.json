{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          { "key": "X-Frame-Options",           "value": "DENY" },
          { "key": "X-XSS-Protection",          "value": "1; mode=block" },
          { "key": "X-Content-Type-Options",    "value": "nosniff" },
          { "key": "Referrer-Policy",           "value": "strict-origin-when-cross-origin" },
          { "key": "Permissions-Policy",        "value": "geolocation=(), microphone=(), camera=()" },
          { 
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self, https://www.gstatic.com/firebasejs'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'none';"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
